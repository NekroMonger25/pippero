{  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },  "include": ["./**/*.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"],
  "typeRoots": ["./types", "./node_modules/@types"]
}
